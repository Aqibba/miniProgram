<scroll-view class="lyric-scroll" hidden="{{isShowLyric}}" scroll-y scroll-top="{{scrollTop}}" scroll-with-animation="true">
  <view class="lyric-panel">
    <block wx:for="{{lyricList}}" wx:key="item">
       <view class="lyric {{index == lyricIndex ? 'hightlight-lyric' : ''}}">{{item.lrc}}</view>
    </block>
  </view>
</scroll-view>